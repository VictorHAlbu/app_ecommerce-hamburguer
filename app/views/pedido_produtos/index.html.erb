<div class="page-header">
  <%= link_to new_pedido_pedido_produto_path(@pedido), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Pedido produto
  <% end %>
  <h1>Lista Itens Pedidos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Pedido</th>
            <th>Produto</th>
            <th>Valor</th>
            <th>Quantidade</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @pedido_produtos.each do |pedido_produto| %>
        <%= content_tag :tr, id: dom_id(pedido_produto), class: dom_class(pedido_produto) do %>
                      <td><%= pedido_produto.pedido.id %></td>
                      <td><%= pedido_produto.produto.nome %></td>
                      <td><%= pedido_produto.valor %></td>
                      <td><%= pedido_produto.quantidade %></td>
                    <td><%= link_to 'Mostrar', pedido_pedido_produto_path(@pedido, pedido_produto) %></td>
          <td><%= link_to 'Editar', edit_pedido_pedido_produto_path(@pedido, pedido_produto) %></td>
          <td><%= link_to 'Apagar', pedido_pedido_produto_path(@pedido, pedido_produto),
           method: :delete, data: { confirm: 'Confirma?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
