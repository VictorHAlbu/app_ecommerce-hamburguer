<div class="page-header">
  <%= link_to new_administrador_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Administrador
  <% end %>
  <h1>Listaadministradors</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Senha</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @administradors.each do |administrador| %>
        <%= content_tag :tr, id: dom_id(administrador), class: dom_class(administrador) do %>
                      <td><%= administrador.nome %></td>
                      <td><%= administrador.email %></td>
                      <td><%= administrador.senha %></td>
                    <td><%= link_to 'Mostrar', administrador %></td>
          <td><%= link_to 'Editar', edit_administrador_path(administrador) %></td>
          <td><%= link_to 'Apagar', administrador, method: :delete, data: { confirm: 'Confirma?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
