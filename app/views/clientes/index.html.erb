<div class="page-header">
  <br>
  <%= link_to new_cliente_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Cliente
  <% end %>
  <h1>Listaclientes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Telefone</th>
            <th>Email</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <%= content_tag :tr, id: dom_id(cliente), class: dom_class(cliente) do %>
                      <td><%= cliente.nome %></td>
                      <td><%= cliente.cpf %></td>
                      <td><%= cliente.telefone %></td>
                      <td><%= cliente.email %></td>
                    <td><%= link_to 'Mostrar', cliente %></td>
          <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
          <td><%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'Confirma?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
