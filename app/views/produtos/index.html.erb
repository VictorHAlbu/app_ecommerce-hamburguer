<div class="page-header">
  <br>
  <%= link_to new_produto_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Produto
  <% end %>
  <h1>Lista Produtos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Imagem</th>
            <th>Quantidade</th>
            <th>Tipo produto</th>
            <th>Valor</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @produtos.each do |produto| %>
        <%= content_tag :tr, id: dom_id(produto), class: dom_class(produto) do %>
                      <td><%= produto.nome %></td>
                      <td><%= produto.descricao %></td>
                      <td>
                        <img src="<%= produto.imagem %>" style="width: 200px">
                      </td>
                      <td><%= produto.quantidade %></td>
                      <td><%= produto.tipo_produto.nome %></td>
                      <td><%= "R$ #{produto.valor}" %></td>
                    <td><%= link_to 'Mostrar', produto %></td>
          <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
          <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Confirma?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
